<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_card_dark"
    android:padding="14dp"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/ivProfessionalAvatar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/bg_avatar_circle"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvProfessionalName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#b5a16c"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ivProfessionalAvatar"
        app:layout_constraintEnd_toStartOf="@id/btnEditProfessional"
        app:layout_constraintTop_toTopOf="@id/ivProfessionalAvatar"/>

    <TextView
        android:id="@+id/tvProfessionalDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:alpha="0.85"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ivProfessionalAvatar"
        app:layout_constraintEnd_toStartOf="@id/btnEditProfessional"
        app:layout_constraintTop_toBottomOf="@id/tvProfessionalName"/>

    <TextView
        android:id="@+id/tvProfessionalExtra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:alpha="0.65"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ivProfessionalAvatar"
        app:layout_constraintEnd_toStartOf="@id/btnEditProfessional"
        app:layout_constraintTop_toBottomOf="@id/tvProfessionalDesc"/>

    <ImageButton
        android:id="@+id/btnEditProfessional"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_icon_button"
        android:contentDescription="@string/edit_professional"
        android:src="@android:drawable/ic_menu_edit"
        app:tint="#b5a16c"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteProfessional"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnDeleteProfessional"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/bg_icon_button"
        android:contentDescription="@string/delete_professional"
        android:src="@android:drawable/ic_menu_delete"
        app:tint="#b5a16c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>