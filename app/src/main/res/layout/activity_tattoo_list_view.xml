<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitleTattoos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/menu_showroom"
        android:textColor="#b5a16c"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAddTattoo"
        app:layout_constraintHorizontal_bias="0" />

    <ImageButton
        android:id="@+id/btnAddTattoo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_icon_button"
        android:contentDescription="@string/add_tattoo"
        android:src="@android:drawable/ic_input_add"
        app:tint="#b5a16c"
        app:layout_constraintTop_toTopOf="@id/tvTitleTattoos"
        app:layout_constraintBottom_toBottomOf="@id/tvTitleTattoos"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/vTitleAccent"
        android:layout_width="54dp"
        android:layout_height="3dp"
        android:layout_marginTop="6dp"
        android:background="#b5a16c"
        app:layout_constraintTop_toBottomOf="@id/tvTitleTattoos"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTattoos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/vTitleAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>