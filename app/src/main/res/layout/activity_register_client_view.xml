<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#000000"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegisterClient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#0b0b0b"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/tvTitleRegisterClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/register_client"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_client"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#121212"
                    app:boxStrokeColor="#b5a16c"
                    app:hintTextColor="#b5a16c">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etClientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/surname_client"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#121212"
                    app:boxStrokeColor="#b5a16c"
                    app:hintTextColor="#b5a16c">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etClientSurname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/email_client"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#121212"
                    app:boxStrokeColor="#b5a16c"
                    app:hintTextColor="#b5a16c">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/phone_client"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#121212"
                    app:boxStrokeColor="#b5a16c"
                    app:hintTextColor="#b5a16c">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="@string/birth_client"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#121212"
                    app:boxStrokeColor="#b5a16c"
                    app:hintTextColor="#b5a16c">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBirthDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="yyyy-MM-dd"
                        android:textColor="#ffffff"
                        android:textColorHint="#888888"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbShowPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/showphoto_client"
                    android:textColor="#ffffff"
                    app:buttonTint="#b5a16c" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegisterClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/register_client"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    app:backgroundTint="#b5a16c"
                    app:cornerRadius="14dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="#000000"
                    app:iconPadding="10dp" />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>