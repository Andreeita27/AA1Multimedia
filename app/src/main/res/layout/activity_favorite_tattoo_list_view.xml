<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/tvFavoritesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_favorite"
        android:textColor="#b5a16c"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:id="@+id/tvFavoritesSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fav_description"
        android:textColor="#ffffff"
        android:alpha="0.85"
        android:textSize="14sp"
        android:layout_marginBottom="14dp" />

    <LinearLayout
        android:id="@+id/emptyStateFavorites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvEmptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_empty"
            android:textColor="#b5a16c"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvEmptySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorite_instructions"
            android:textColor="#AAFFFFFF"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavorites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="8dp" />

</LinearLayout>