<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#0b0b0b"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivTattooImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            android:contentDescription="@string/menu_favorite" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTattooId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvTattooInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tattoo_info"
                android:textSize="13sp"
                android:textColor="#CCFFFFFF"
                android:alpha="0.85"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/cbInstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instagram_button"
                android:textColor="#b5a16c"
                android:buttonTint="#b5a16c"
                android:textSize="12sp"
                android:paddingStart="6dp"
                android:paddingEnd="2dp" />

            <TextView
                android:id="@+id/tvInstagramHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instagram_instructions"
                android:textColor="#88FFFFFF"
                android:textSize="10sp"
                android:layout_marginTop="-2dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>